`q# ============================================
# JetsMX Agent Framework - Environment Variables
# ============================================
# Copy this file to .env and fill in all values
# cp env.template .env
# ============================================

# ------------------------------------------
# Google Cloud Platform
# ------------------------------------------
GCP_PROJECT_ID=jetsmx-agent
GCP_SERVICE_ACCOUNT_JSON_PATH=./google-service-account-keys.json

# ------------------------------------------
# Airtable Configuration
# ------------------------------------------
# Get your API key from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=YOUR_AIRTABLE_API_KEY_HERE
# Get base ID from the URL: https://airtable.com/{BASE_ID}/...
AIRTABLE_BASE_ID=YOUR_AIRTABLE_BASE_ID_HERE

# ------------------------------------------
# Gmail Configuration
# ------------------------------------------
GMAIL_USER_EMAIL=jobs@jetstreammx.com
GMAIL_WATCH_TOPIC=projects/jetsmx-agent/topics/jetsmx-gmail-events

# ------------------------------------------
# Google Calendar
# ------------------------------------------
CALENDAR_ID=primary

# ------------------------------------------
# Google Chat (Optional)
# ------------------------------------------
# Get space ID from the Chat URL or Chat API
GOOGLE_CHAT_SPACE_ID=YOUR_CHAT_SPACE_ID_HERE

# ------------------------------------------
# Pub/Sub Topics
# ------------------------------------------
# These will be created by scripts/setup_pubsub.py
PUBSUB_TOPIC_AIRTABLE=jetsmx-airtable-events
PUBSUB_TOPIC_GMAIL=jetsmx-gmail-events
PUBSUB_TOPIC_DRIVE=jetsmx-drive-events
PUBSUB_TOPIC_CHAT=jetsmx-chat-events

# ------------------------------------------
# Google Drive Folders
# ------------------------------------------
# Get folder IDs from Drive URL: https://drive.google.com/drive/folders/{FOLDER_ID}
DRIVE_FOLDER_RESUMES_INCOMING=YOUR_RESUMES_FOLDER_ID_HERE
DRIVE_FOLDER_TRANSCRIPTS_PROBE=YOUR_PROBE_TRANSCRIPTS_FOLDER_ID_HERE
DRIVE_FOLDER_TRANSCRIPTS_INTERVIEW=YOUR_INTERVIEW_TRANSCRIPTS_FOLDER_ID_HERE

# ------------------------------------------
# Environment & Logging
# ------------------------------------------
ENVIRONMENT=development
LOG_LEVEL=INFO

# ------------------------------------------
# Cloud Run (Webhooks)
# ------------------------------------------
# Generate a secure random string for webhook validation (optional but recommended)
WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET_HERE

# ------------------------------------------
# Vertex AI
# ------------------------------------------
VERTEX_AI_LOCATION=us-central1

